<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="Credova\Gateways\CredovaHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Credova\Service\PaymentClientApi" />
            <argument type="service" id="Credova\Service\OrderTransactionMapper\OrderTransactionMapper"/>
            <argument type="service" id="Credova\Service\ConfigService" />
            <argument type="service" id="CredovaPayment.logger"/>
            <tag name="shopware.payment.method"/>
        </service>

        <service id="Credova\Subscriber\CheckoutConfirmEventSubscriber">
            <argument type="service" id="Credova\Service\CustomerDataValidator"/>
            <argument type="service" id="Credova\Service\ConfigService" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Credova\Service\CustomerDataValidator">
            <argument type="service" id="customer.repository" />
            <argument type="service" id="Credova\Service\ConfigService" />
        </service>

        <service id="Credova\Subscriber\RefundEventSubscriber">
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="Credova\Service\PaymentClientApi" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Credova\Subscriber\ProductPageSubscriber">
            <argument type="service" id="Credova\Service\ConfigService" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Credova\Service\PaymentClientApi">
            <argument type="service" id="Credova\Service\ConfigService" />
        </service>

        <service id="Credova\Service\PaymentTransactionStateHandler\CredovaTransactionStateHandler">
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
        </service>

        <service id="Credova\Service\ConfigService">
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
        </service>

        <service id="Credova\Service\OrderTransactionMapper\OrderTransactionMapper">
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="order.repository" />
            <argument type="service" id="customer.repository" />
        </service>


        <service id="Credova\Storefront\Controller\WebhookController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="Credova\Service\PaymentTransactionStateHandler\CredovaTransactionStateHandler" />
            <argument type="service" id="Credova\Service\OrderTransactionMapper\OrderTransactionMapper"/>
            <argument type="service" id="Credova\Service\PaymentClientApi" />
            <argument type="service" id="CredovaPayment.logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="Credova\Storefront\Controller\CredovaCancelController" public="true">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>


        <!-- Logger  -->
        <service id="CredovaPayment.logger" class="Monolog\Logger">
            <argument type="string">Credova</argument>
            <argument type="collection">
                <argument type="service" id="CredovaPayment.rotatingHandler"/>
            </argument>
        </service>

        <service id="CredovaPayment.rotatingHandler" class="Monolog\Handler\RotatingFileHandler">
            <argument type="string">%kernel.logs_dir%/CredovaPayment-%kernel.environment%.log</argument>
        </service>
        <!-- Logger END -->


    </services>
</container>